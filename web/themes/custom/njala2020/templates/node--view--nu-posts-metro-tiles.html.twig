{% extends "node--nu-post--nu-metro-tile.html.twig" %}
{% block featured_post %}
  {% set view_row_index = elements['#nu_view_index'] %}
  {% if view_row_index == 2 or view_row_index == 3 %}
    {% set field_nu_pst_image_styled = content.field_nu_pst_image.0 %}
    {% set field_nu_pst_image_styled = field_nu_pst_image_styled|merge({'#image_style': 'nu_metro_tile_wide_image'}) %}
  {% else %}
    {% set field_nu_pst_image_styled = content.field_nu_pst_image %}
  {% endif %}
  {{ field_nu_pst_image_styled }}
{% endblock %}
