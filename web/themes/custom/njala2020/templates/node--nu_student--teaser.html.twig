{% extends "node.html.twig" %}
{#
/**
 * @file
 * NJALA2020's theme implementation to display a Student node in teaser view mode.
 */
#}

{% block meta_area %}
  {% if display_submitted %}
    <div class="node__meta">
      {{ author_picture }}
      <span{{ author_attributes.addClass('node__submitted-info') }}>
        {% trans %}
          <span class="node__submitted-info-text">By</span> {{ author_name }} on 
          <span class="node__submitted-date">
            {{ date }}
          </span>
        {% endtrans %}
      </span>
      {{ metadata }}
    </div>
  {% endif %}
{% endblock %}

{% block content %}
  {{ attach_library('njala2020/node-student') }}
  <div class="row content-top mb-5">
    {% if content.field_nu_stdt_teaser_image|render and not node.field_nu_stdt_teaser_image.isEmpty() %}
      <div class="col-sm-4">
        <div class="photo-container mb-4 mb-sm-0">
          {{ content.field_nu_stdt_teaser_image }}
        </div>
      </div>
    {% endif %}
    {% if content.field_nu_stdt_teaser_image|render and not node.field_nu_stdt_teaser_image.isEmpty() %}
      <div class="col-sm-8 pl-sm-3">
    {% else %}
      <div class="col-sm-12">
    {% endif %}
      {{ title_prefix }}
        <h2{{ title_attributes.addClass('node__title mt-0') }}>
          <a href="{{ url }}" rel="bookmark">{{ label }}</a>
        </h2>
      {{ title_suffix }}
      {{ content.field_nu_stdt_academic_title }}
      {{ content.field_nu_stdt_body }}
      {{ content.links }}
    </div>
  </div>
  {% if content|without('field_nu_stdt_teaser_image','field_nu_stdt_body','field_nu_stdt_academic_title','links','field_nu_stdt_banner_image')|render %}
    <div class="row content">
      <div class="col-12 col-xl-8">
        {{ content|without('field_nu_stdt_teaser_image','field_nu_stdt_body','field_nu_stdt_academic_title','links','field_nu_stdt_banner_image') }}
      </div>
    </div>
  {% endif %}
{% endblock %}
